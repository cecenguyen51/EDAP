<%- include('partials/_header.ejs') %>
    <%- include('partials/_navigator.ejs') %>

        <!-- Main Content -->
        <main class="flex-grow-1"> <!-- Makes sure content fills available space -->
            <!-- Hero Section with Bootstrap Carousel -->
            <section id="homeSection">
                <div id="mainCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/1.jpeg" class="d-block w-100 carousel-img" alt="Energy Image 1">
                            <div class="carousel-caption d-none d-md-block">
                                <h1>Powering the Future</h1>
                                <p>Innovative energy solutions for a sustainable tomorrow.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="/images/2.jpeg" class="d-block w-100 carousel-img" alt="Energy Image 2">
                            <div class="carousel-caption d-none d-md-block">
                                <h1>Innovative Technology</h1>
                                <p>Harnessing renewable energy to empower communities.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="/images/3.jpeg" class="d-block w-100 carousel-img" alt="Energy Image 3">
                            <div class="carousel-caption d-none d-md-block">
                                <h1>Clean & Green</h1>
                                <p>Sustainable energy solutions for a better planet.</p>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </section>
        </main>

        <%- include('partials/_footer.ejs') %>