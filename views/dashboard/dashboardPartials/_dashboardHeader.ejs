<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/dashboard.css">
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column" id="sidebar">
        <a class="navbar-brand" href="/dashboard">
            <div class="text-center">
                <img src="/images/MAXX-Energy-Logo-1B.png" alt="Maxx Energy Logo" style="height: 50px;">
            </div>
        </a>
        <a href="/dashboard">Dashboard</a>
        <a href="/dashboard/performance">Performance</a>
        <a href="/dashboard/support">Support</a>
        <a href="/dashboard/users">Users</a>
        <a href="/dashboard/contact-messages">Customer Inquiries</a>
        <a href="/dashboard/account">Account</a>
    </div>

    <!-- Main Content -->
    <div class="content" id="mainContent">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light shadow-sm px-3">
            <button class="btn btn-dark me-3" id="toggleSidebar"><i class="fa fa-bars"></i></button>
            <form class="d-flex me-auto">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            </form>
            <div class="d-flex align-items-center">
                <a href="#" class="me-3 text-dark"><i class="fa fa-bell"></i></a>
                <a href="/dashboard/account" class="me-2" style="width: 40px; height: 40px;">
                    <img src="/uploads/<%= user.profile_image || 'profile.png' %>"
                        class="rounded-circle img-fluid" alt="Profile"
                        style="width: 100%; height: 100%; object-fit: cover;">
                </a>
                <form action="/auth/logout" method="POST"
                    onsubmit="return confirm('Are you sure you want to log out?');">
                    <button type="submit" title="Log Out" aria-label="Log out" class="btn btn-logout">
                        <span class="text-dark"><i class="fa fa-sign-out-alt"></i></span>
                    </button>
                </form>
            </div>
        </nav>